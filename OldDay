package com.austria.Project1;


import org.springframework.web.bind.annotation.GetMapping;

import java.util.Scanner;

public class OldDay {

    Scanner scanDay = new Scanner(System.in);

    public String[] week = new String[]{
            "Monday", "Tuesday", "Wednesday",
            "Thursday", "Friday",
            "Saturday", "Sunday"
    };
    public int dayCount;

//    @GetMapping("/demo")
    public void InputDay() {

        System.out.println("Enter day today: ");
        String dayIn = scanDay.nextLine();

        System.out.println("How many days after today? ");
        int dayAdd = scanDay.nextInt();

        switch(dayIn){
            case "Monday":
                dayCount = 0;
                break;
            case "Tuesday":
                dayCount = 1;
                break;
            case "Wednesday":
                dayCount = 2;
                break;
            case "Thursday":
                dayCount = 3;
                break;
            case "Friday":
                dayCount = 4;
                break;
            case "Saturday":
                dayCount = 5;
                break;
            case "Sunday":
                dayCount = 6;
                break;
            default:
                System.out.println("Sorry! Better luck next time!!!");
                break;
        }

        if (dayAdd < 0) {
            dayAdd = (dayAdd + dayCount + 7) % 7;
        }
        else
        {
            dayAdd = (dayAdd + dayCount) % 7;
        }

        System.out.println("Output day: "+week[dayAdd]);
    }
}
